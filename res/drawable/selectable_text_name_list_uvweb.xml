<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Even though these two point to the same resource, have two states so the drawable will invalidate
    itself when coming out of pressed state. -->
    <item android:state_activated="true" android:color="@android:color/white"/>
    <item android:state_focused="true" android:state_enabled="false" android:state_pressed="true"
          android:color="@color/grey_background"/>
    <item android:state_focused="true" android:state_enabled="false"
          android:color="@color/grey_background"/>
    <item android:state_focused="true" android:state_pressed="true"
          android:color="@android:color/white"/>
    <item android:state_focused="false" android:state_pressed="true"
          android:color="@android:color/white"/>
    <item android:state_focused="true" android:color="@android:color/white"/>
    <item android:color="@color/grey_background"/>
</selector>