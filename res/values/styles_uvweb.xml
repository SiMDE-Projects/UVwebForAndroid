<resources>

    <style name="Theme.UVweb_Default" parent="@style/Theme.Sherlock.Light.DarkActionBar">
        <item name="actionBarItemBackground">@drawable/selectable_background_uvweb</item>
        <item name="actionBarStyle">@style/ActionBar.Solid.UVweb</item>
        <item name="actionBarTabTextStyle">@style/ActionBar.TabText.UVweb</item>
        <item name="android:windowBackground">@color/abs__background_holo_light</item>
        <item name="actionBarWidgetTheme">@style/ActionBarWidget.UVweb</item>
    </style>

    <style name="Theme.UVweb" parent="@style/Theme.UVweb_Default">
        <item name="android:listViewStyle">@style/ListView.UVweb</item>
        <item name="android:spinnerItemStyle">@style/SpinnerItem.UVweb</item>
    </style>

    <style name="Theme.UVweb.Logo" parent="Theme.UVweb">
        <item name="actionBarStyle">@style/ActionBar.Solid.UVweb.Logo</item>
    </style>

    <style name="Theme.UVweb.NoLogo" parent="Theme.UVweb">
        <item name="actionBarStyle">@style/ActionBar.Solid.UVweb.NoLogo</item>
    </style>

    <style name="Theme.UVweb.Logo.Transparent" parent="@style/Theme.UVweb.Logo">
    </style>

    <style name="ActionBar.Solid.UVweb" parent="@style/Widget.Sherlock.Light.ActionBar.Solid.Inverse">
        <item name="background">@drawable/ab_solid_uvweb</item>
        <item name="backgroundStacked">@drawable/ab_stacked_solid_uvweb</item>
        <item name="displayOptions">homeAsUp|showHome|showTitle</item>
        <item name="navigationMode">tabMode</item>
    </style>

    <style name="ActionBar.Solid.UVweb.Logo" parent="ActionBar.Solid.UVweb">
        <item name="displayOptions">useLogo|showHome</item>
        <item name="logo">@drawable/uvweb_logo</item>
    </style>

    <style name="ActionBar.Solid.UVweb.NoLogo" parent="ActionBar.Solid.UVweb">
        <item name="displayOptions">showTitle|homeAsUp</item>
    </style>

    <style name="ActionBarWidget.UVweb" parent="@style/Theme.Sherlock">
        <item name="android:textColorHint">@android:color/white</item>
    </style>

    <style name="ActionBar.TabText.UVweb" parent="@style/Widget.Sherlock.Light.ActionBar.TabText.Inverse">
        <item name="android:textSize">@dimen/tab_text_size</item>
    </style>

    <style name="ListView.UVweb" parent="android:Widget.ListView">
        <item name="android:listSelector">@drawable/list_selector_uvweb</item>
        <item name="android:divider">@drawable/list_divider_holo_light</item>
        <item name="android:cacheColorHint">@color/background_holo_light</item>
    </style>

    <style name="SpinnerItem.UVweb" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
        <item name="android:textColor">#000000</item>
    </style>

    <!-- Workaround for the Fastscrolling wrong color on devices running Android < 3.0
        See https://gist.github.com/DHuckaby/d6b1d9c8e7f9d70c39de for more information
    -->
    <style name="ListView.UVweb.fastScrollThemed" parent="@android:style/Widget.ListView">
        <item name="android:textColorPrimary">?android:textColorPrimaryInverse</item>
        <item name="android:overScrollFooter">@null</item> <!-- Fix for Motorola devices -->
    </style>

    <!-- UV list styles -->
    <!-- Default styles -->
    <style name="ListDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
    </style>
    <!-- Actual styles (phones) -->
    <style name="List" parent="@style/ListDefault">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>
    <style name="ListNewsfeed" parent="@style/ListDefault">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- UV item styles -->
    <!-- Default styles -->
    <style name="RootDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <style name="NameDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Name.LetterDefault" parent="@style/Name">
        <item name="android:textColor">@drawable/selectable_text_name_list_uvweb</item>
    </style>

    <style name="Name.NumberDefault" parent="@style/Name">
        <item name="android:textColor">@color/main_color</item>
        <item name="android:layout_marginRight">6dip</item>
        <item name="android:layout_toRightOf">@id/uv_code_letter</item>
    </style>

    <style name="RightPartDefault">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_toRightOf">@id/uv_code_number</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="DescriptionDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@drawable/selectable_text_infos_list_bright_uvweb</item>
    </style>

    <style name="RateDefault">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">right</item>
        <item name="android:textColor">@drawable/selectable_text_infos_list_uvweb</item>
    </style>

    <!-- Actual styles (phones) -->
    <style name="Root" parent="@style/RootDefault">
    </style>

    <style name="Name" parent="@style/NameDefault">
        <item name="android:textSize">35sp</item>
    </style>

    <style name="Name.Letter" parent="@style/Name.LetterDefault">
    </style>

    <style name="Name.Number" parent="@style/Name.NumberDefault">
    </style>

    <style name="Description" parent="@style/DescriptionDefault">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Rate" parent="@style/RateDefault">
        <item name="android:textSize">20sp</item>
    </style>

    <!-- Empty uv list style -->
    <!-- Default style -->
    <style name="EmptyListDefault">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">23sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">@string/no_uvs</item>
    </style>
    <!-- Actual style -->
    <style name="EmptyList" parent="@style/EmptyListDefault">
    </style>

    <!-- Sticky header style -->
    <!-- Default style -->
    <style name="StickyHeaderRootDefault">
    </style>
    <!-- Actual style -->
    <style name="StickyHeaderRoot" parent="@style/StickyHeaderRootDefault">
        <item name="android:background">@color/abs__background_holo_light</item>
    </style>

    <style name="SectionHeader">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">@dimen/list_section_divider_min_height</item>
        <item name="android:textAppearance">?android:attr/textAppearanceSmall</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/main_color</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">8dip</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
        <item name="android:textAllCaps">true</item>
    </style>

    <!-- UV comment style -->
    <!-- Default style -->
    <style name="UvCommentDefault">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">8dp</item>
    </style>

    <!-- Actual style (phones) -->
    <style name="UvComment" parent="@style/UvCommentDefault">
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:background">@drawable/shadow</item>
    </style>

</resources>