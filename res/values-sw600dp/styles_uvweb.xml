<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="Theme.UVweb.Logo.Transparent" parent="@style/Theme.UVweb.Logo">
        <item name="android:windowBackground">@null</item>
    </style>

    <!-- UV list styles -->
    <style name="List" parent="@style/ListDefault">
        <item name="android:divider">@null</item>
    </style>
    <style name="ListNewsfeed" parent="@style/ListDefault">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item>
    </style>

    <!-- UV item styles -->
    <style name="Root" parent="@style/RootDefault">
        <item name="android:paddingLeft">8dp</item>
        <item name="android:paddingRight">8dp</item>
    </style>

    <style name="Name" parent="@style/NameDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Description" parent="@style/DescriptionDefault">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="Rate" parent="@style/RateDefault">
        <item name="android:textSize">22sp</item>
    </style>

    <!-- Empty uv list style -->
    <style name="EmptyList" parent="@style/EmptyListDefault">
        <item name="android:paddingRight">@dimen/uv_list_empty_right_padding</item>
        <item name="android:background">@drawable/list_background_twopane_uvweb</item>
    </style>

    <!-- Sticky header style -->
    <style name="StickyHeaderRoot" parent="@style/StickyHeaderRootDefault">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/list_background_twopane_uvweb</item>
    </style>

    <!-- UV comment style -->
    <style name="UvComment" parent="@style/UvCommentDefault">
    </style>
</resources>