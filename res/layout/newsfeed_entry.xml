<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp"
    android:background="@drawable/background_card">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/user_avatar"
            android:layout_width="@dimen/avatar_image_view_size"
            android:layout_height="@dimen/avatar_image_view_size"
            android:layout_marginRight="8dp"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/user_id_action"
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="amasciul a publiÃ© un nouveau commentaire"
            android:textSize="16sp"
            android:textColor="@color/main_color"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3 septembre 1985"
            android:gravity="center_vertical|right"
            android:textSize="@dimen/date_text_size"
            android:layout_marginLeft="8dp"
            android:textColor="@color/grey_background"
            android:layout_gravity="center_horizontal|top" />

    </LinearLayout>

    <TextView
        android:id="@+id/comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/uvcommentexample"
        android:textSize="14sp"
        android:layout_marginTop="8dp"
        android:textIsSelectable="true" />

</LinearLayout>