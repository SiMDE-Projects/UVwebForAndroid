<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/uvweb_uv_root">

    <TextView
            android:id="@+id/uvcode"
            style="@style/uvweb_uv_name"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/desc"
                style="@style/uvweb_uv_description"/>

        <TextView
                android:id="@+id/rate"
                style="@style/uvweb_uv_rate"/>

    </LinearLayout>

</LinearLayout>