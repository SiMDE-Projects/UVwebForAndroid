<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              style="@style/Root"
              android:background="@drawable/selectable_background_list_uvweb">

    <TextView
            android:id="@+id/uvcode"
            style="@style/Name"/>

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <TextView
                android:id="@+id/desc"
                style="@style/Description"/>

        <TextView
                android:id="@+id/rate"
                style="@style/Rate"/>

    </LinearLayout>

</LinearLayout>