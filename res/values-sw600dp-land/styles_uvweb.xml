<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- UV list styles -->
    <style name="List" parent="@style/ListDefault">
        <item name="android:divider">@null</item>
        <item name="android:background">@drawable/list_background_twopane_uvweb</item>
    </style>

    <style name="ListNewsfeed" parent="@style/ListDefault">
        <item name="android:paddingLeft">@dimen/list_internal_padding</item>
        <item name="android:paddingRight">@dimen/list_internal_padding</item>
    </style>

    <!-- UV item styles -->
    <style name="Root" parent="@style/RootDefault">
        <item name="android:paddingTop">24dp</item>
        <item name="android:paddingBottom">24dp</item>
    </style>

    <style name="Name" parent="@style/NameDefault">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="Description" parent="@style/DescriptionDefault">
        <item name="android:textSize">14sp</item>
        <item name="android:layout_marginLeft">4dp</item>
    </style>

    <!-- Empty uv list style -->
    <style name="EmptyList" parent="@style/EmptyListDefault">
        <item name="android:paddingRight">@dimen/uv_list_empty_right_padding</item>
        <item name="android:background">@drawable/list_background_twopane_uvweb</item>
        <item name="android:text">@string/no_uvs</item>
    </style>

    <style name="NewsfeedEmptyList" parent="@style/EmptyListDefault">
        <item name="android:text">@string/no_newsfeed_entry</item>
    </style>

    <!-- Sticky header style -->
    <style name="StickyHeaderRoot" parent="@style/StickyHeaderRootDefault">
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">16dp</item>
        <item name="android:background">@drawable/list_background_twopane_uvweb</item>
    </style>
</resources>