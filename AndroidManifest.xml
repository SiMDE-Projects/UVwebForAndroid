<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="fr.utc.assos.uvweb"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="7"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Theme.UVweb"
        android:hardwareAccelerated="true" >
        <activity
            android:name=".activities.UVListActivity"
            android:theme="@style/Theme.UVweb.Logo" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.UVDetailActivity"
            android:parentActivityName=".activities.UVListActivity"
            android:theme="@style/Theme.UVweb.NoLogo" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UVListActivity" />
        </activity>
        <activity
            android:name=".activities.AboutActivity"
            android:label="@string/about"
            android:parentActivityName=".activities.UVListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UVListActivity" />
        </activity>
        <activity
            android:name=".activities.LicensesActivity"
            android:label="@string/licenses"
            android:parentActivityName=".activities.UVListActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".activities.UVListActivity" />
        </activity>
    </application>

</manifest>